<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <ImageView
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:id="@+id/question_thumb"
                android:layout_marginRight="10dp"/>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/question_wrapper"
                      android:visibility="gone"
                      android:orientation="vertical">
            <TextView
                    android:id="@+id/question"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            <ListView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/options"/>
        </LinearLayout>
    </LinearLayout>
    <Button android:layout_gravity="center_horizontal" android:id="@+id/skipper" android:text="Gambarnya ga ngeload euy, skip donk"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView android:textSize="26sp" android:id="@+id/score" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal"  />

    <TextView android:id="@+id/multiplier" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginBottom="10dp" />
</LinearLayout>

